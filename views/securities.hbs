<h2>Securities</h2>

{{!-- Create a table --}}
<table border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>TICKER</th>
            <th>CURRENT PRICE</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr>
            <td align="middle">{{this.securityID}}</td>
            <td align="middle">{{this.name}}</td>
            <td align="middle">{{this.ticker}}</td>
            <td align="right">{{this.currentPrice}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p>

</p>
<h3>Add Security</h3>
<form id="add-security-form" method="POST" action="/add-security-form">
    <input type="text" name="input-name" id="input-name" placeholder="Name">
    <input type="text" name="input-ticker" id="input-ticker" placeholder="Ticker">
    <input type="text" name="input-currentPrice" id="input-currentPrice" placeholder="Current Price">

    <div style="text-align:center">
        <input type="Submit"/>
    </div>
</form>
