<h2>Security Codes Securities</h2>

<p><strong>Note: This is an intersection table. For a complete list of securities and security codes, please refer to the 'Securities' and 'Security Codes' pages.</strong></p>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

{{!-- Create a table --}}
<table id="scs-table" border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>SECURITY</th>
            <th>SECURITY CODE</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr>
            <td align="middle">{{this.scsID}}</td>
            <td align="middle">{{this.name}}</td>
            <td align="left">{{this.description}}</td>
            <td><button onclick="deleteSCS({{this.scsID}})">Delete</button></td>
            <td><button onclick="window.location.href='/scs-update?scsID={{this.scsID}}'">Update</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete-scs.js"></script>

<p>

</p>
<h3>Add SCS</h3>
<form id="add-scs-form" method="POST" action="/add-scs-form">
    <select name="input-securityID" id="input-securityID">
        <option value="">Security</option>
        {{#each securities}}
        <option value="{{this.securityID}}">{{this.name}}</option>
        {{/each}}
    </select>
    
    <select name="input-securityCodeID" id="input-securityCodeID">
        <option value="">Security Code</option>
        {{#each securitycodes}}
        <option value="{{this.securityCodeID}}">{{this.description}}</option>
        {{/each}}
    </select>

    <div style="text-align:center">
        <input type="Submit"/>
    </div>
</form>
