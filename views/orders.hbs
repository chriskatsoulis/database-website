<h2>Orders</h2>

{{!-- Create a table --}}
<table border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>INVESTOR</th>
            <th>SECURITY</th>
            <th>POSITION</th>
            <th>ORDER TYPE</th>
            <th>TOTAL UNITS</th>
            <th>PRICE</th>
            <th>TRADE TOTAL</th>
            <th>DATE</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr>
            <td align="middle">{{this.orderID}}</td>
            <td align="middle">{{this.investorname}}</td>
            <td align="middle">{{this.securityname}}</td>
            <td align="middle">{{this.positionID}}</td>
            <td align="middle">{{this.orderType}}</td>
            <td align="middle">{{this.totalUnits}}</td>
            <td align="right">{{this.price}}</td>
            <td align="right">{{this.tradeTotal}}</td>
            <td align="middle">{{this.date}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p>
<h3>Add Order</h3>
<form id="add-order-form" method="POST" action="/add-order-form">
    <select name="input-investorID" id="input-investorID">
        <option value="">Investor</option>
        {{#each investors}}
        <option value="{{this.investorID}}">{{this.name}}</option>
        {{/each}}
    </select>
    <select name="input-securityID" id="input-securityID">
        <option value="">Security</option>
        {{#each securities}}
        <option value="{{this.securityID}}">{{this.name}}</option>
        {{/each}}
    </select>
    <select name="input-positionID" id="input-positionID" placeholder="Position ID">
        <option value="">Position (New)</option> 
        {{#each data}}
        <option value="{{this.positionID}}">{{this.positionID}} - {{this.investorname}} - {{this.securityname}}</option>
        {{/each}}
    </select>
    <select name="input-orderType" id="input-orderType">
        <option value="Buy">Buy</option>
        <option value="Sell">Sell</option>
    </select>
    <input type="text" name="input-totalUnits" id="input-totalUnits" placeholder="Total Units" size="10">
    <input type="text" name="input-price" id="input-price" placeholder="Price" size="10">
    <input type="date" name="input-date" id="input-date" placeholder="Date">
    <input type="submit">
</form>
</p>

